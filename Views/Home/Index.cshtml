<style>.card-columns {display: inline-block}</style>
@{
    ViewData["Title"] = "Address Book - Contact Index";
}
<div class="container">
    <div class="row">
@if (Model != null)
{
<div class="card-deck" style="width: 100%;">
@foreach(var contact in Model)
    {
    <div class="col-xl-3 col-lg-4 col-md-6 pb-5 id-@contact.Key">
        <div class="card cad-outline-info">
            <div class="card-block">
                <h5 class="card-title pl-3">@contact.Value.GetName()</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@contact.Value.GetPhone(true)</li>
                    <li class="list-group-item">@contact.Value.GetAddress().GetFullAddress()</li>
                </ul>
            </div>
            <div class="card-footer">
                <form action="/contact/delete/@contact.Key" method="post" id="delete"></form>
                <a  class="btn btn-primary" type="submit" role="button" href="/contact/@contact.Key">View Contact</a>
                <button class="float-right btn btn-danger" type="submit" form="delete">X</button>
            </div>
        </div>
    </div>
    }
</div>

} else {
    <h3>Add some contacts first.</h3>
}
    </div>
</div>