@{
    ViewData["Title"] = "Home Page";
}
<h1> Test </h1>
@if (Model != null)
{
<div class="card-deck">
@foreach(var contact in Model)
    {
        <div class="col-xs-4">
            <div class="card" style="width: 30rem;">
                <div class="card-block">
                    <h4 class="card-title">@contact.Value.GetName() #@contact.Key</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@contact.Value.GetPhone(false)</li>
                        <li class="list-group-item">@contact.Value.GetAddress().GetFullAddress()</li>
                    </ul>
                    <a href="/contact/@contact.Key" class="btn btn-primary">View Contact Details</a>
                </div>
            </div>
        </div>
    }
</div>
}

<div class="container-fluid">
    <hr>
<a href='/addcontact'>Add A Contact</a>
</div>