<style>
    .form-control {margin-bottom: 20px; width: 90%; text-align: center;}
</style>
@{
    ViewData["Title"] = "Address Book - Add a contact";
}
<div class="container">
<h2>@ViewData["Title"].</h2>
<!-- <div class="center-block"> -->
    <form action="/addcontact" method="POST" role="form">
    <div class="row">
        <div class="col-5-md">
        <div class="form-group">
            <label class="sr-only" for="">label</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Name">
        </div>
        <div class="form-group">
            <label class="sr-only" for="">label</label>
            <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone: Ex. 5555555555">
        </div>
        <div class="form-group">
            <label class="sr-only" for="">label</label>
            <input type="text" class="form-control" id="streetAddress" name="streetAddress" placeholder="Street Address">
        </div>
        </div>
        <div class="col-5-md">
        <div class="form-group">
            <label class="sr-only" for="">label</label>
            <input type="text" class="form-control" id="city" name="city" placeholder="City">
        </div>
        <div class="form-group">
            <label class="sr-only" for="">label</label>
            <input type="text" class="form-control" id="state" name="state" placeholder="State">
        </div>
        <div class="form-group">
            <label class="sr-only" for="">label</label>
            <input type="text" class="form-control" id="zipCode" name="zipCode" placeholder="ZipCode">
        </div>
        </div>
        </div>
        <div class="row">
        <div class="col-12-xl">
        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Add New Contact</button>
        </div>
        </div>
    </form>
</div>
